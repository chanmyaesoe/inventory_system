<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="net.javaguides.springboot.springboothelloworldtutorial.mapper.EmployeeMapper">
    <resultMap id = "EmployeeResult" type="net.javaguides.springboot.springboothelloworldtutorial.mapper.EmployeeMapper">
        <id column = "id" jdbcType = "BIGINT" property = "id"/>
        <result column = "first_name" jdbcType = "VARCHAR" property = "first_name"/>
        <result column = "last_name" jdbcType = "VARCHAR" property = "last_name"/>
        <result column = "email" jdbcType = "VARCHAR" property = "email"/>
    </resultMap>

    <!--column all-->
    <sql id="Base_Column_List">
        id, first_name, last_name, email
    </sql>

    <!--Query all-->
    <select id="getAll" resultType="employee">
        select
        <include refid="Base_Column_List"/>
        from employees
        <if test="pageSize != 0">
            limit #{pageNum}, #{pageSize}
        </if>
    </select>

    <!--Query Count-->
    <select id="getCount" resultType="Employee">
        select count(id) as id from employees
    </select>


    <!--Save Employee-->
    <insert id="saveEmployee"  useGeneratedKeys="true" keyProperty="id" parameterType="employee">
        insert into employees(email,first_name,last_name)  values(#{email},#{first_name},#{last_name})
    </insert>

    <!--delete Id delete employee-->
    <delete id="deleteEmployeeById">
       delete from employees where id =#{id}
    </delete>

    <!--Update this employee information-->
    <update id="updateEmployee">
       update employees set email = #{email},first_name =  #{first_name},last_name =  #{last_name}
       where id = #{id}
    </update>

</mapper>