<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="net.javaguides.springboot.springboothelloworldtutorial.mapper.ItemMapper">
    <resultMap id="itemMap" type="item" >
        <id column="id" property="id" javaType="java.lang.Integer" jdbcType="BIGINT" />
        <result column="name" property="product_name" javaType="java.lang.String" jdbcType="VARCHAR"/>
    </resultMap>

