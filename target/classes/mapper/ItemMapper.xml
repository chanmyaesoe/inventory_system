    <!--Query all-->
    <select id="getAll" resultMap="itemMap">
        select id,count from calender
    </select>

    <!--Save Item-->
    <insert id="saveItem"  useGeneratedKeys="true" keyProperty="id">
        insert into item(name,password)  values(#{name},#{password})
    </insert>

    <!--adopt Id delete item-->
    <delete id="deleteItemById">
       delete from item where id =#{id}
    </delete>

    <!--Update this item information-->
    <update id="updateItem">
       update item set name = #{name},password =  #{password}
       where id = #{id}
    </update>

</mapper>